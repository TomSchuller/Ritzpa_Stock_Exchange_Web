<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>FeedServlet</servlet-name>
        <servlet-class>servlets.firstPage.FeedServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FileUploadServlet</servlet-name>
        <servlet-class>servlets.secondPage.FileUploadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsersListServlet</servlet-name>
        <servlet-class>servlets.secondPage.UsersListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetUserChatServlet</servlet-name>
        <servlet-class>servlets.chat.SendChatServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChatServlet</servlet-name>
        <servlet-class>servlets.chat.ChatServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StocksListServlet</servlet-name>
        <servlet-class>servlets.secondPage.StocksListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TransferMoneyServlet</servlet-name>
        <servlet-class>servlets.secondPage.TransferMoneyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TotalMoneyServlet</servlet-name>
        <servlet-class>servlets.secondPage.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BrokerStockServlet</servlet-name>
        <servlet-class>servlets.thirdPage.BrokerStockServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>makeOrderServlet</servlet-name>
        <servlet-class>servlets.thirdPage.makeOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>transactionAlerts</servlet-name>
        <servlet-class>servlets.alerts.TransactionAlerts</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>createCompanyServlet</servlet-name>
        <servlet-class>servlets.secondPage.CreateCompanyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TotalQuantityServlet</servlet-name>
        <servlet-class>servlets.secondPage.TotalQuantityServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FeedServlet</servlet-name>
        <url-pattern>/feedPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FileUploadServlet</servlet-name>
        <url-pattern>/pages/brokerFeedPage/uploadJquery</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsersListServlet</servlet-name>
        <url-pattern>/userslist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetUserChatServlet</servlet-name>
        <url-pattern>/pages/brokerFeedPage/sendChat</url-pattern>
        <url-pattern>/pages/adminFeedPage/sendChat</url-pattern>
        <url-pattern>/pages/brokerStockProfile/sendChat</url-pattern>
        <url-pattern>/pages/adminStockProfile/sendChat</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChatServlet</servlet-name>
        <url-pattern>/chat</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StocksListServlet</servlet-name>
        <url-pattern>/stockslist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TransferMoneyServlet</servlet-name>
        <url-pattern>/pages/brokerFeedPage/transferMoney</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TotalMoneyServlet</servlet-name>
        <url-pattern>/totalMoney</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TotalQuantityServlet</servlet-name>
        <url-pattern>/totalQuantity</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BrokerStockServlet</servlet-name>
        <url-pattern>/stockPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>makeOrderServlet</servlet-name>
        <url-pattern>/pages/brokerStockProfile/makeOrder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createCompanyServlet</servlet-name>
        <url-pattern>/pages/brokerFeedPage/createCompany</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>transactionAlerts</servlet-name>
        <url-pattern>/transactionAlerts</url-pattern>
    </servlet-mapping>

</web-app>